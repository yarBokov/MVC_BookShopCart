@model GenreDTO
@{
    Layout = "_AdminLayout";
}
@* @Html.ValidationSummary() *@
<div style="width:50%">
    <h2> Добавить жанр </h2>
    <a asp-action="Index" asp-controller="Genre" class="btn btn-primary">Назад</a>
    <form asp-action="AddGenre">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Жанр</label>
            <input type="text" class="form-control" asp-for="GenreName" />
            <span asp-validation-for="GenreName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Добавить</button>
        </div>
    </form>
</div>